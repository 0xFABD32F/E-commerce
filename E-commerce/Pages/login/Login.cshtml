@page
@model E_commerce.Pages.login.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="login-container">
    <div class="login-card shadow-sm">
        <h2 class="login-title">Welcome Back</h2>
        <p class="login-subtitle">Sign in to your account</p>

        <form method="post" class="login-form">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group">
                <label asp-for="Input.Username">Username</label>
                <input asp-for="Input.Username" class="form-control" placeholder="Enter your username" required />
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Password">Password</label>
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Enter your password" required />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-login">Login</button>
        </form>

        <div class="login-footer">
            <p>Don't have an account? <a asp-page="CreateAccount" class="link-primary">Sign up</a></p>
        </div>
    </div>
</div>

<style>
    /* Container */
    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 80vh;
        background: linear-gradient(135deg, #f0f4f8, #d9e2ec);
        padding: 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    /* Card */
    .login-card {
        background: #ffffff;
        border-radius: 12px;
        padding: 40px 30px;
        width: 100%;
        max-width: 400px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.1);
        text-align: center;
    }

    /* Titles */
    .login-title {
        font-size: 28px;
        font-weight: 600;
        margin-bottom: 8px;
        color: #1f2937;
    }

    .login-subtitle {
        font-size: 14px;
        color: #6b7280;
        margin-bottom: 30px;
    }

    /* Form */
    .login-form .form-group {
        margin-bottom: 20px;
        text-align: left;
    }

    .login-form label {
        font-weight: 500;
        margin-bottom: 6px;
        display: block;
        color: #374151;
    }

    .login-form input.form-control {
        width: 100%;
        padding: 12px 14px;
        border: 1px solid #d1d5db;
        border-radius: 8px;
        font-size: 14px;
        transition: all 0.2s ease-in-out;
    }

        .login-form input.form-control:focus {
            border-color: #3b82f6;
            box-shadow: 0 0 0 2px rgba(59,130,246,0.2);
            outline: none;
        }

    /* Button */
    .btn-login {
        width: 100%;
        padding: 12px;
        font-size: 16px;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.2s ease-in-out;
    }

        .btn-login:hover {
            background-color: #2563eb;
            box-shadow: 0 4px 12px rgba(59,130,246,0.3);
        }

    /* Footer */
    .login-footer {
        margin-top: 20px;
        font-size: 14px;
        color: #6b7280;
    }

        .login-footer a.link-primary {
            color: #3b82f6;
            text-decoration: none;
            font-weight: 500;
        }

            .login-footer a.link-primary:hover {
                text-decoration: underline;
            }
</style>
