@page
@model E_commerce.Pages.CartModel
@{
    ViewData["Title"] = "Your Cart";
}
<style>
    .quantity-input {
        width: 70px;
        text-align: center;
    }

    .table th {
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.04em;
    }

    .table td {
        vertical-align: middle;
    }

    .cart-summary {
        border-radius: 12px;
    }

        .cart-summary h4 {
            font-size: 1.3rem;
        }
</style>


<div class="container my-5">

    <h1 class="mb-4 fw-bold">🛒 Your Shopping Cart</h1>

    @if (Model.ProductCache == null || Model.ProductCache.Count == 0)
    {
        <div class="alert alert-info text-center p-4">
            <h5 class="mb-2">Your cart is empty</h5>
            <p class="mb-3">Looks like you haven’t added anything yet.</p>
            <a asp-page="/Index" class="btn btn-primary">Start Shopping</a>
        </div>  
    }
    else
    {
        <form method="post">

            <div class="table-responsive shadow-sm rounded">
                <table class="table align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Product</th>
                            <th class="text-end">Price</th>
                            <th class="text-center">Quantity</th>
                            <th class="text-end">Subtotal</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model.ProductCache != null && Model.ProductInfo != null)
                        {
                            @foreach (var (productId, quantity) in Model.ProductCache)
                            {
                                if (Model.ProductInfo.TryGetValue(productId, out var product))
                                {
                                    <tr>
                                        <td class="fw-semibold">
                                            @product.Name
                                        </td>
                                        <td class="text-end">
                                            @product.Price DH
                                        </td>
                                        <td class="text-center">
                                            <input type="number"
                                                   name="Quantities"
                                                   value="@quantity"
                                                   min="1"
                                                   max="@product.Available_Qty"
                                                   class="form-control form-control-sm quantity-input mx-auto" />
                                            <input type="hidden"
                                                   name="ProductIds"
                                                   value="@productId" />
                                        </td>
                                        <td class="text-end fw-semibold">
                                            @(product.Price* quantity) DH
                                        </td>
                                        <td class="text-center">
                                            <button type="submit"
                                                    name="remove"
                                                    value="@productId"
                                                    class="btn btn-outline-danger btn-sm">
                                                ✖ Remove
                                            </button>
                                        </td>
                                    </tr>

                                }                             

                                    
                                
                            }
                        }
                     
                    </tbody>
                </table>
            </div>

            <!-- CART ACTIONS -->
            <div class="row mt-4 align-items-center">
                <div class="col-md-6 mb-3 mb-md-0">
                    <a asp-page="/Index" class="btn btn-outline-secondary">
                        ← Continue Shopping
                    </a>
                </div>

                <div class="col-md-6 text-md-end">
                    <button type="submit"
                            name="update"
                            value="true"
                            class="btn btn-primary px-4">
                        Update Cart
                    </button>
                </div>
            </div>
            <!-- TOTAL SUMMARY -->
            <div class="card mt-4 shadow-sm cart-summary">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Total</h4>
                    <h4 class="mb-0 fw-bold text-primary">
                        @Model.ProductView.CalculateTotal(Model.ProductInfo, Model.ProductCache) DH
                    </h4>
                </div>
            </div>            

        </form>
    }
</div>
