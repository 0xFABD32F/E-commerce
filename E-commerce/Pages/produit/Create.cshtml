@page
@model E_commerce.Pages.produit.CreateModel

        @{
        ViewData["Title"] = "Create";
        }
        
        <h1>Create</h1>
        
    <h4>Product</h4>
    <hr />
    <div class="row">
    <div class="col-md-4">
    <form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" required />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" class="form-control" required />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" required />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="ImageFile" class="control-label">Image</label>
                <input type="file" id="ImageFile" name="ImageFile" class="form-control" accept="image/*" />
                <span class="text-danger" id="imageError"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

<!--
    Don't rely on Javascript to validate image input.
By simply disabling javascript,this will bypass client-side validation so imgPath = NULL is possible.
Imagine passing this value to system.file.delete(imgPath) ====> raises exception !!!
