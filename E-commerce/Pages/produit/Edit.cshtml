@page
@model E_commerce.Pages.produit.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.Id" />
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" required />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" class="form-control" required />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" required />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Available_Qty" class="control-label"></label>
                <input asp-for="Product.Available_Qty" class="form-control" required />
                <span asp-validation-for="Product.Available_Qty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.CategoryId" class="control-label">Category</label>
                <select asp-for="Product.CategoryId" class="form-control" asp-items="Model.Categories" required>
                    <option value="">-- Select Category --</option>
                </select>
                <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Current Image</label>
                @if (!string.IsNullOrEmpty(Model.Product.ImgPath))
                {
                    <div class="mb-2">
                        <img src="~/@Model.Product.ImgPath" alt="@Model.Product.Name" style="max-width: 150px; max-height: 150px;" />
                        <br />
                        <small class="text-muted">Current image</small>
                    </div>
                }
                else
                {
                    <div class="mb-2">
                        <span class="text-muted">No image</span>
                    </div>
                }
            </div>
            <div class="form-group">
                <label for="ImageFile" class="control-label">Upload New Image (Optional)</label>
                <input type="file" id="ImageFile" name="ImageFile" class="form-control" accept="image/*" />
                <span class="text-danger" id="imageError"></span>
                <small class="text-muted">Leave empty to keep current image</small>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./MyListedProducts">Back to List</a>
</div>

