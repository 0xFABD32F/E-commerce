@page
@model E_commerce.Pages.produit.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.ImgPath)
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Product.ImgPath))
            {
                <img src="~/@Model.Product.ImgPath" alt="@Model.Product.Name" style="max-width:200px; max-height:200px;" />
            }
            else
            {
                <span>No image</span>
            }
        </dd>
    </dl>
</div>
