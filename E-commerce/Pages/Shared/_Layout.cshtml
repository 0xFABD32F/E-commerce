<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E_commerce</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>

        /* Header Styles */
        .main-header {
            background: white;
            border-bottom: 2px solid #e5e7eb;
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .logo-image {
            height: 45px;
            width: auto;
        }

        .cart-icon-wrapper {
            position: relative;
            padding: 8px;
            border-radius: 8px;
            transition: background 0.2s;
        }

            .cart-icon-wrapper:hover {
                background: #f3f4f6;
            }
    </style>
</head>
<body>
    <header class="main-header shadow-sm">
        <nav class="navbar navbar-expand-lg navbar-light bg-white">
            <div class="container-fluid px-4">

                <!-- Logo -->
                <a class="navbar-brand d-flex align-items-center gap-2" asp-page="/Index">
                    <img src="~/logo/treble-clef-svgrepo-com.svg" class="logo-image" />
                </a>

                <div class="d-flex align-items-center gap-3">

                    <!-- Cart -->
                    <a asp-page="/Cart" class="cart-icon-wrapper">
                        <img src="~/logo/shopping-cart-outline-svgrepo-com.svg" height="24" width="24" />
                    </a>

                    @if (!User.Identity.IsAuthenticated)
                    {
                        <!-- LOGIN -->
                        <a asp-page="/Login/Login">
                            <img src="~/logo/login-svgrepo-com.svg" height="24" width="24" />
                           
                        </a>
                    }
                    else
                    {
                        <!-- MY ACCOUNT -->
                        <a asp-page="/user/Details">
                            <img src="~/logo/account-circle-svgrepo-com.svg" height="24" width="24" />                            
                        </a>

                        <!-- LOGOUT -->
                        <form method="post" asp-page="login/Logout">
                            <button type="submit">
                                <img src="~/logo/logout-svgrepo-com.svg" height="24" width="24" />
                                Logout
                            </button>
                        </form>
                    }
                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Amazing -
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

